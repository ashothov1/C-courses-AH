using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication3
{
    class Program
    {
        static void Main(string[] args)
        {
            int Input=1;
            double Sum = 0;
            int K = -1;
            double Medium;
            while(Input!=0)
            {
                Input = Convert.ToInt32(Console.ReadLine());
                Sum += Input;
                K++;
            }
            Medium = Sum / K;
            Console.WriteLine("Количество введёных чисел =" + K);
            Console.WriteLine("Среднее арифметическое этих чисел =" + Medium);
            Console.ReadLine();
        }
    }
}
